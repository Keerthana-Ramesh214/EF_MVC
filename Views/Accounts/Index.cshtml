@model IEnumerable<EntityFramewor_MVC.Models.Account>

@{
    ViewData["Title"] = "Index";
}
<style>
    td{
        font-family:'Times New Roman', Times, serif;
    }
</style>
<h1 style="font-family:'Times New Roman', Times, serif">Index</h1>

<p>
    <a asp-action="Create" style="font-family:'Times New Roman', Times, serif">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountHolderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountHolderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BalanceAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountNo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AccountNo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AccountNo">Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>